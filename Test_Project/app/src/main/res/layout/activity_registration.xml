<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/background"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/header_text"
        android:layout_width="209dp"
        android:layout_height="67dp"
        android:autoSizeTextType="uniform"
        android:gravity="center"
        android:text="Skill Check"
        android:textColor="@color/white"
        tools:layout_editor_absoluteX="101dp"
        tools:layout_editor_absoluteY="302dp" />

    <TextView
        android:id="@+id/header_subtext"
        android:layout_width="130dp"
        android:layout_height="21dp"
        android:autoSizeTextType="uniform"
        android:text="We will advance it!"
        android:textColor="@color/myGrey"
        tools:layout_editor_absoluteX="140dp"
        tools:layout_editor_absoluteY="355dp" />

    <EditText
        android:id="@+id/username_input"
        android:layout_width="289dp"
        android:layout_height="36dp"
        android:background="@drawable/user_input_border"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="User"
        android:textColor="@color/myGrey"
        tools:layout_editor_absoluteX="61dp"
        tools:layout_editor_absoluteY="406dp" />

    <EditText
        android:id="@+id/password_input"
        android:layout_width="289dp"
        android:layout_height="36dp"
        android:background="@drawable/password_input_border"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Password"
        android:textColor="@color/myGrey"
        tools:layout_editor_absoluteX="61dp"
        tools:layout_editor_absoluteY="441dp" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="209dp"
        android:layout_height="251dp"

        android:src="@drawable/logo"
        tools:layout_editor_absoluteX="101dp"
        tools:layout_editor_absoluteY="85dp" />

    <TextView
        android:id="@+id/forgot_password"
        android:layout_width="106dp"
        android:layout_height="20dp"
        android:autoSizeTextType="uniform"
        android:gravity="right"
        android:text="Forgot password?"
        android:textColor="@color/text_purple"
        tools:layout_editor_absoluteX="230dp"
        tools:layout_editor_absoluteY="485dp">

    <Button
        android:id="@+id/btn_enter_user"
        android:layout_width="289dp"
        android:layout_height="42dp"
        android:textColor="@color/white"
        app:backgroundTint="@drawable/rounded_border"
        android:background="@drawable/rounded_border"
        android:text="Enter"
        tools:layout_editor_absoluteX="61dp"
        tools:layout_editor_absoluteY="513dp" />

    <View
        android:id="@+id/divider"
        android:layout_width="200dp"
        android:layout_height="3dp"
        android:background="@color/text_purple"
        tools:layout_editor_absoluteX="105dp"
        tools:layout_editor_absoluteY="580dp" />

    <Button
        android:id="@+id/btn_google"
        android:layout_width="289dp"
        android:layout_height="42dp"
        android:background="@drawable/border_rounded_gradient"
        android:text="Login with Google"
        android:textColor="@color/text_purple"
        app:backgroundTint="@drawable/rounded_border"
        tools:layout_editor_absoluteX="61dp"
        tools:layout_editor_absoluteY="606dp" />
</androidx.constraintlayout.widget.ConstraintLayout>