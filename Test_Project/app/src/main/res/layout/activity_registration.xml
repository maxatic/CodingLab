<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="209dp"
        android:layout_height="251dp"

        android:layout_marginTop="16dp"
        android:src="@drawable/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/forgot_password"
        android:layout_width="106dp"
        android:layout_height="20dp"
        android:layout_marginTop="416dp"
        android:layout_marginEnd="72dp"
        android:autoSizeTextType="uniform"
        android:gravity="right"
        android:text="Forgot password?"
        android:textColor="@color/text_purple"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/username_input"
        android:layout_width="289dp"
        android:layout_height="36dp"
        android:layout_marginTop="336dp"
        android:background="@drawable/user_input_border"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="User"
        android:textColor="@color/myGrey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_enter_user"
        android:layout_width="289dp"
        android:layout_height="42dp"
        android:layout_marginTop="452dp"
        android:background="@drawable/rounded_border"
        android:text="Enter"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_google"
        android:layout_width="289dp"
        android:layout_height="42dp"
        android:layout_marginTop="516dp"
        android:background="@drawable/border_rounded_gradient"
        android:text="Login with Google"
        android:textColor="@color/text_purple"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/divider"
        android:layout_width="200dp"
        android:layout_height="3dp"
        android:layout_marginTop="504dp"
        android:background="@color/text_purple"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/password_input"
        android:layout_width="289dp"
        android:layout_height="36dp"
        android:layout_marginTop="372dp"
        android:background="@drawable/password_input_border"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Password"
        android:textColor="@color/myGrey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/header_subtext"
        android:layout_width="130dp"
        android:layout_height="21dp"
        android:layout_marginTop="296dp"
        android:autoSizeTextType="uniform"
        android:text="We will advance it!"
        android:textColor="@color/myGrey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/header_text"
        android:layout_width="209dp"
        android:layout_height="67dp"
        android:layout_marginTop="232dp"
        android:autoSizeTextType="uniform"
        android:gravity="center"
        android:text="Skill Check"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>